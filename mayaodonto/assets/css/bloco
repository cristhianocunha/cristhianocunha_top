.featuresseng {
	display: -moz-flex;
	display: -webkit-flex;
	display: -ms-flex;
	display: flex;
	-moz-flex-wrap: wrap;
	-webkit-flex-wrap: wrap;
	-ms-flex-wrap: wrap;
	flex-wrap: wrap;
	-moz-justify-content: center;
	-webkit-justify-content: center;
	-ms-justify-content: center;
	justify-content: center;
	width: calc(100% + 2em);
	margin: 0 0 4em -2em;
	padding: 0;
	list-style: none;
}

/* Estilo para alinhar os conteúdos em grupos de 2 em 2 */
.featuresseng li {
    width: calc(50% - 1em); /* 2 em 2 com 1em de margem entre eles */
    margin-left: 1em; /* Espaço entre os elementos */
    margin-top: 0em;
    padding: 0;
    float: left; /* Adicione o float para alinhar os elementos corretamente */
    box-sizing: border-box; /* Evite que a margem adicione largura extra */
}

/* Redefina as margens para o segundo elemento em cada par */
.featuresseng li:nth-child(2n) {
    margin-left: 0;
    clear: left; /* Limpe o float no segundo elemento de cada par */
}

/* Remova a margem superior do primeiro elemento em cada par */
.featuresseng li:nth-child(2n - 1) {
    margin-top: 0;
}

/* Estilo para evitar margem inferior extra no último elemento em cada par */
.featuresseng li:nth-child(2n) > :last-child {
    margin-bottom: 0;
}
.featuresseng a {
	text-decoration: none;
}


